# =============================================================================
# DOCKER ENVIRONMENT VARIABLES - MERCATOPRO
# =============================================================================
# This file is used by docker-compose.yml
# Contains Docker-specific configuration with secure defaults

# =============================================================================
# DJANGO SETTINGS - DOCKER
# =============================================================================
# Debug mode disabled by default for security
DEBUG=False

# Change this in production to a secure random key
SECRET_KEY=mercato-pro-secret-key-change-in-production-12345

# Allow all hosts in Docker environment (configure specific hosts in production)
ALLOWED_HOSTS=*

# Cookie security (enable in production Docker with SSL termination)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Enable Docker mode to use PostgreSQL and Redis services
USE_DOCKER=1

# =============================================================================
# DATABASE SETTINGS - DOCKER
# =============================================================================
# PostgreSQL connection from Docker Compose services
DB_NAME=mercato_db
DB_USER=mercato_user
DB_PASSWORD=mercato_password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS & CELERY SETTINGS - DOCKER
# =============================================================================
# Redis connection from Docker Compose
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Celery configuration with Redis broker
CELERY_RESULT_BACKEND=django-db
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0

# =============================================================================
# PAYPAL PAYMENT INTEGRATION - DOCKER
# =============================================================================
# PayPal Sandbox credentials (configure with real values)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Use Sandbox mode by default
PAYPAL_SANDBOX_MODE=True

# =============================================================================
# STATIC & MEDIA FILES - DOCKER
# =============================================================================
# Static files will be collected to this volume-mounted directory
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Media files will be stored in this volume-mounted directory
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# =============================================================================
# EMAIL CONFIGURATION - DOCKER
# =============================================================================
# Configure with your SMTP provider
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Default email sender
DEFAULT_FROM_EMAIL=noreply@mercato.pro
SERVER_EMAIL=noreply@mercato.pro

# Email retry configuration
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=60

# =============================================================================
# SITE & APPLICATION SETTINGS - DOCKER
# =============================================================================
# Site URL (update to your domain)
SITE_URL=http://localhost

# Security headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=False

# CORS settings
CORS_ALLOW_ALL_ORIGINS=True

# Ports (used by docker-compose)
WEB_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Service health checks
SKIP_SERVICE_CHECKS=false

# =============================================================================
# LOGGING & MONITORING - DOCKER
# =============================================================================
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# ADDITIONAL SETTINGS - DOCKER
# =============================================================================
INTERNAL_IPS=127.0.0.1

# Cache backend
CACHE_URL=redis://:redis_password@redis:6379/1
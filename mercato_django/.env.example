# MercatoPro Environment Variables
# Copy this file to .env.local (development), .env.production (production), or .env.docker (Docker)
# and update the values accordingly

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
# Set to False in production
DEBUG=True

# Generate a secure secret key for production (min. 50 chars, random)
# python -c "import secrets; print(secrets.token_urlsafe(60))"
SECRET_KEY=your-super-secret-key-change-this-in-production-and-make-it-random

# Comma-separated list of allowed hosts (domains/subdomains)
# Example: localhost,127.0.0.1,example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Cookie settings (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Enable Docker mode (True for Docker, False for local development)
USE_DOCKER=False

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL connection (used when USE_DOCKER=True)
DB_NAME=mercato_db
DB_USER=mercato_user
DB_PASSWORD=mercato_password
DB_HOST=localhost
DB_PORT=5432

# SQLite is used in local development (when USE_DOCKER=False)
# DB_FILE_NAME=db.sqlite3

# =============================================================================
# REDIS & CELERY SETTINGS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration
CELERY_RESULT_BACKEND=django-db
CELERY_BROKER_URL=

# =============================================================================
# PAYPAL PAYMENT INTEGRATION
# =============================================================================
# PayPal Client ID (Sandbox for testing, Live for production)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# PayPal Mode: True for Sandbox, False for Live production
PAYPAL_SANDBOX_MODE=True

# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================
# Static files (CSS, JS, Images)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Media files (User uploads)
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Backend: console for development/testing, smtp for production
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (only used when EMAIL_BACKEND uses smtp.EmailBackend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Default email addresses
DEFAULT_FROM_EMAIL=noreply@mercato.pro
SERVER_EMAIL=noreply@mercato.pro

# Email retry configuration
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=60

# =============================================================================
# SITE & APPLICATION SETTINGS
# =============================================================================
# Base URL for the application (include protocol and port if needed)
SITE_URL=http://localhost:8000

# Security Headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=False

# CORS Settings (for API access from frontend)
CORS_ALLOW_ALL_ORIGINS=True

# Port settings (for Docker/docker-compose)
WEB_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Service Health Checks
SKIP_SERVICE_CHECKS=false

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)  
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# ADDITIONAL OPTIONAL SETTINGS
# =============================================================================
# Internal IPs for Django Debug Toolbar (development)
INTERNAL_IPS=127.0.0.1,localhost

# Cache configuration
CACHE_URL=

# Database connection string (alternative to DB_* vars)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname